<form>
  <h3>New Lot</h3>
  <div class="form-group">
    <label for="name">Name</label>
    {{input value=name id="name" class="form-control" placeholder="Name"}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input value=image id="image" class="form-control" placeholder="Image URL"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Add Lot</button>
</form>
